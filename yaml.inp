Region:

  - Species:
      name: ion1

  - Load:
      species_name: ion1
      Num: 261
      method: random_reject
      rand_seed: 1
      r_reject: 1e-2
      perturb: 0.2 
      halton_bases: [2,3,5]

  - Potential: 
      type: Yukawa
      algorithm: PP
      kappa: 3
      Gamma: 1000
      rc: 1.8

  - Thermostat:
      type: Berendsen

  - Integrator:
        type: Verlet

  - Langevin:
      type: BBK
      gamma: 10.1

  - Control:
      dt: 0.1
      Neq: 100
      Nstep: 400 
      BC: periodic
      units: Yukawa
      writexyz: no
      random_seed: 1
      verbose: yes

