Region:

  - Species:
      name: ion1

  - Load:
      species_name: ion1
      Num: 343
      method: random_reject
      r_reject: 1e-2

  - Potential: 
      type: Yukawa
      algorithm: PP
      kappa: 3
      Gamma: 1000
      rc: 1.8
      

  - Thermostat:
      type: Berendsen

  - Langevin:
      type: BBK
      gamma: 0.1

  - Control:
      dt: 0.1
      Neq: 0
      Nstep: 0
      BC: periodic
      units: Yukawa
      ptcls_init: random
      writeout: yes
      writexyz: no
      dump_step: 1
      random_seed: 1
      restart: 0
      verbose: yes
